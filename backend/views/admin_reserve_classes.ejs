<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Reserve Classes</title>
    <!-- Include Bootstrap CSS here -->
    <!-- Include any additional CSS styles if needed -->
</head>

<body>
    <div class="container">
        <h1>Admin Reserve Classes</h1>
        <div id="messages"></div>

        <!-- Add Reserve Class Form -->
        <h2>Add Reserve Class</h2>
        <form id="add-reserve-class-form">
            <!-- Form fields for adding reserve class -->
            <!-- Example: <input type="text" name="teacher_id" placeholder="Teacher ID" required> -->
            <button type="submit" class="btn btn-primary">Add</button>
        </form>

        <!-- List of Reserve Classes for the Teacher -->
        <table class="table table-striped">
            <thead>
                <tr>
                  <th>Reserve Class ID</th>
                  <th>Teacher ID</th>
                  <th>Reserve Date</th>
                  <th>Teacher Name</th>
                  <th>Student ID</th>
                  <th>Book Type</th>
                  <th>Booking For Other</th>
                  <th>Student Contact Mobile Number</th>
                  <th>Student Address</th>
                  <th>Booking Message</th>
                  <th>Action</th>
                </tr>
              </thead>
              
            <tbody>
                <% reserveClasses.forEach(function(reserveClass) { %>
                    <tr>
                        <td>
                            <%= reserveClass.reserve_class_id %>
                        </td>
                        <td>
                            <%= reserveClass.teacher_id %>
                        </td>
                        <td>
                            <%= reserveClass.reserve_date %>
                        </td>
                        <td>
                            <%= reserveClass.teacher_name %>
                        </td>
                        <td>
                            <%= reserveClass.student_id %>
                        </td>
                        <td>
                            <%= reserveClass.book_type %>
                        </td>
                        <td>
                            <%= reserveClass.booking_for_other %>
                        </td>
                        <td>
                            <%= reserveClass.student_contact_mobile_number %>
                        </td>
                        <td>
                            <%= reserveClass.student_address %>
                        </td>
                        <td>
                            <%= reserveClass.booking_message %>
                        </td>
                        <td>
                            <button class="btn btn-danger delete-btn"
                                data-reserve-class-id="<%= reserveClass.reserve_class_id %>">Delete</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Include Bootstrap and jQuery libraries -->
    <!-- Include your 'admin_reserve_classes_script.js' script here -->
    <!-- Include jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Include admin_reviews_script.js -->
    <script src="/js/admin_reserve_classes_script.js"></script>
</body>

</html>